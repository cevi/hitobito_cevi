- before_columns ||= []
- after_columns ||= []
- classes ||= nil

%table.table.table-striped{class: classes}
  %thead
    %tr
      - before_columns.each do |c|
        %th
        %th.center{colspan: 2}= t("activerecord.attributes.member_count.person")
      - after_columns.each do |c|
        %th
    %tr
      - before_columns.each do |c|
        %th= c
      - 1.times do
        %th.center= t('global.gender.female_short')
        %th.center= t('global.gender.male_short')
      - after_columns.each do |c|
        %th.center= c
  %tbody
    = yield
